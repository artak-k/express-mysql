{
    "compilerOptions": {
      "lib": [
        "es2018",
        "dom",
      ],
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "build",
      "rootDir": "src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "noImplicitAny": false,
      "allowJs": true

    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules",
      "*.js",
      "build",
      "ormconfig.js",
    ]
  }